[Unit]
Description=Heimdallr - LLM-powered service monitoring
Documentation=https://github.com/ChameleonLabsLLC/heimdallr
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/opt/heimdallr

# Environment
Environment=PYTHONUNBUFFERED=1
EnvironmentFile=-/opt/heimdallr/.env

# Start command
ExecStart=/opt/heimdallr/.venv/bin/python main.py

# Restart policy
Restart=always
RestartSec=10

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=heimdallr

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/heimdallr/Logs

# Resource limits
MemoryMax=1G
CPUQuota=80%

[Install]
WantedBy=multi-user.target
